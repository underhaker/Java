<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="yes.starship.MenuActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Start Game"
        android:id="@+id/button_start"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_button_unpressed"
        android:onClick="button_start_click"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Settings"
        android:id="@+id/button_settings"
        android:background="@drawable/bg_button_unpressed"
        android:onClick="button_settings_click"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/button_start" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Exit Game"
        android:id="@+id/button_exit"
        android:background="@drawable/bg_button_unpressed"
        android:onClick="button_exit_click"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="About"
        android:id="@+id/button_about"
        android:background="@drawable/bg_button_unpressed"
        android:onClick="button_about_click"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="35dp"
        android:layout_below="@+id/button_settings" />
</RelativeLayout>
